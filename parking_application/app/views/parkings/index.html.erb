<h1>Parkings</h1>
 
<table>
  <tr>
    <th>City</th>
    <th>Places</th>
    <th>Hour price</th>
    <th>Day price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @parkings.each do |parking| %>
  <tr>
    <td><%= @parking.address.city if @parking.address %></td>
    <td><%= parking.places %></td>
    <td><%= parking.hour_price %></td>
    <td><%= parking.day_price %></td>
    <td><%= link_to "Show", parking %></td>
    <td><%= link_to "Edit", edit_parking_path(parking) %></td>
    <td><%= link_to "Remove", parking, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
<br>

<h3> Search for parking: </h3>
<%= form_tag("/search", method: "get") do %>
  <p>
    <%= label_tag(:private, "Private") %>
    <%= check_box_tag("private") %>
    <%= label_tag(:public, "Public") %>
    <%= check_box_tag("public") %>
  </p> 
  <p>
    <%= label_tag(:city, "City:") %>
    <%= text_field_tag :city %><br>
  </p>
  <p>
    <%= label_tag(:day_price, "Day price") %>
    <%= text_field_tag :day_price %>
  </p>
  <p>
    <%= label_tag(:hour_price, "Hour price") %>
    <%= text_field_tag :hour_price %>
  </p>
  <p>
  <%= submit_tag("Search") %>
  </p>
<% end %>