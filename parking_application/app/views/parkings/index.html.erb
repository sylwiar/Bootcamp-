<h1>Parkings</h1>
 
<table>
  <tr>
    <th>City</th>
    <th>Places</th>
    <th>Hour price</th>
    <th>Day price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @parkings.each do |parking| %>
  <tr>
    <td><% if parking.address %><%= parking.address.city %><% end %></td>
    <td><%= parking.places %></td>
    <td><%= parking.hour_price %></td>
    <td><%= parking.day_price %></td>
    <td><%= link_to "Show", parking %></td>
    <td><%= link_to "Edit", edit_parking_path(parking) %></td>
    <td><%= link_to "Remove", parking, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
<br>

<h3> Search for parking: </h3>
<%= form_tag("/parkings_path", method: "get") do %>
  <p>
    <%= label_tag(:private_parking, "Private") %>
    <%= check_box_tag("private_parking") %>
    <%= label_tag(:public_parking, "Public") %>
    <%= check_box_tag("public_parking") %>
  </p> 
  <p>
    <%= label_tag(:city, "City:") %>
    <%= text_field_tag :city %><br>
  </p>
  <p>
    <%= label_tag(:lower_hour_limit, "Min hour price") %>
    <%= text_field_tag :lower_hour_limit, '', size: 2 %>
    <%= label_tag(:upper_hour_limit, "Max hour price") %>
    <%= text_field_tag :upper_hour_limit, '', size: 2 %>
  </p>
  <p>
    <%= label_tag(:lower_day_limit, "Min day price") %>
    <%= text_field_tag :lower_day_limit, '', size: 2 %>
    <%= label_tag(:upper_day_limit, "Max day price") %>
    <%= text_field_tag :upper_day_limit, '', size: 2 %>
  </p>
  <p>
  <%= submit_tag("Search") %>
  </p>
<% end %>